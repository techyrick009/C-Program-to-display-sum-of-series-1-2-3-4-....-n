#include<stdio.h> 
//#include 

void main() {



//clrscr();

int i,n;
int sum_of_series = 0;
 
 
   printf("\n C Program to print sum of series 1 + 3 + 5 + 7 + .... + n : \n\n ");
 
   printf("Enter an odd number n : ");
   scanf("%d",&n);
   
   for ( i = 1 ; i <= n ; i=i+2 )
   {

      if((n-1)!=i)
        printf(" %d +",i);
      else
        printf(" %d ",i);
      sum_of_series = sum_of_series + i;
      
     
   }
   
   printf(" = %d",sum_of_series);
   

 //    getch(); 

}

